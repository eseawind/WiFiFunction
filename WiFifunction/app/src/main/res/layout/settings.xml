<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/settings_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back1">
        <ImageView
            android:id="@+id/settings_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal|top"
            android:clickable="true"
            android:onClick="dialog"
            android:src="@drawable/faceback"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_rectangle"
            android:layout_marginTop="20dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/settings_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="登录"
            android:textSize="15sp"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/settings_layout2"
        android:layout_below="@id/settings_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout
            android:id="@+id/settings_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0"
            android:stretchColumns="0">
            <View
                android:background="#E6E6FA"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <TableRow
                android:id="@+id/table1"
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/settings_equipment"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:text="Option"
                    android:textSize="20sp"/>
            </TableRow>
            <View
                android:background="#E6E6FA"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <TableRow
                android:id="@+id/table2"
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/settings_option1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:text="Option"
                    android:textSize="20sp"/>
            </TableRow>
            <View
                android:background="#E6E6FA"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <TableRow
                android:id="@+id/table3"
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/settings_option2"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="12dp"
                    android:text="Option"
                    android:textSize="20sp"/>
            </TableRow>
            <View
                android:background="#E6E6FA"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <TableRow
                android:id="@+id/table4"
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/settings_option3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="8dp"
                    android:text="Option"
                    android:textSize="20sp"/>
            </TableRow>
            <View
                android:background="#E6E6FA"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <TableRow
                android:id="@+id/table5"
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/settings_option4"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:text="Option"
                    android:textSize="20sp"/>
            </TableRow>
            <View
                android:background="#E6E6FA"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            </TableLayout>


        </LinearLayout>
</RelativeLayout>