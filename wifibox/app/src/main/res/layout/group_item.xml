<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_color"
    >
    <TextView
        android:id="@+id/group_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerVertical="true"
        android:text="团名"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/group_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:text="26"
        android:textSize="18sp"
        />
    <ImageView
        android:id="@+id/group_item_count_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/group_add"
        android:layout_toLeftOf="@id/group_item_count"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/group_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/group_item_count_img"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:text="20150421"
        />
    <ImageView
        android:id="@+id/group_item_date_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/group_add"
        android:layout_toLeftOf="@id/group_item_date"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
